<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2Ð°01/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
UI_shared.xsd">

    <Script file="Mac_RogueComboPointBar.lua" />
    <Script file="Mac_RogueComboPoint.lua" />

    <Frame name="Mac_RogueComboPointTemplate" drawLayer="BORDER" mixin="Mac_RogueComboPointMixin" virtual="true">
        <Size x="40" y="20" />
        <Layers>
            <Layer level="ARTWORK" textureSubLevel="2">
                <Texture parentKey="Texture">
                </Texture>
            </Layer>
            <Layer level="OVERLAY" textureSubLevel="3">
                <Texture parentKey="BorderTop">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="0" y="10"/>
                        <Anchor point="TOPRIGHT" x="10" y="0"/>
                    </Anchors>
                    <Size x="0" y="10" />
                    <Color r="0" g="0" b="0" a="0.5"/>
                </Texture>
                <Texture parentKey="BorderBottom">
                    <Anchors>
                        <Anchor point="BOTTOMLEFT" x="-10" y="-10"/>
                        <Anchor point="BOTTOMRIGHT" x="0" y="0"/>
                    </Anchors>
                    <Size x="0" y="10" />
                    <Color r="0" g="0" b="0" a="0.5"/>
                </Texture>
                <Texture parentKey="BorderLeft">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="-10" y="10"/>
                        <Anchor point="BOTTOMLEFT" x="0" y="0"/>
                    </Anchors>
                    <Size x="10" y="0" />
                    <Color r="0" g="0" b="0" a="0.5"/>
                </Texture>
                <Texture parentKey="BorderRight">
                    <Anchors>
                        <Anchor point="TOPRIGHT" x="10" y="0"/>
                        <Anchor point="BOTTOMRIGHT" x="0" y="-10"/>
                    </Anchors>
                    <Size x="10" y="0" />
                    <Color r="0" g="0" b="0" a="0.5"/>
                </Texture>
            </Layer>
        </Layers>
        <Scripts>        
            <OnLoad method="OnLoad"/>
        </Scripts>
    </Frame>

    <Frame name="Mac_RogueComboPointBarFrameTemplate" inherits="HorizontalLayoutFrame" mixin="Mac_RogueComboPointBarFrameMixin" virtual="true">
        <Anchors>
            <Anchor point="CENTER" x="0" y="0" />
        </Anchors>
        <KeyValues>
            <KeyValue key="spacing" value="30" type="number"/>
            <KeyValue key="fixedHeight" value="32" type="number"/>
            </KeyValues>
        <Scripts>
            <OnLoad method="OnLoad"/>
            <OnEvent method="OnEvent"/>
        </Scripts>
    </Frame>

</Ui>